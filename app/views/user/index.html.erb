<div class="container">
    
    <div class="form-group row">
        <% @users.each do |u| %>
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <%= u.id %> 번째 회원
                        <h4 class="card-title"><%= u.email %></h4>
                        <h6 class="card-subtitle mb-2 text-muted"><%= u.updated_at %></h6>
                        <h6 class="card-subtitle mb-2"><%= u.password %></h6>
                        <div class="text-right">
                            <a href="/user/show/<%= u.id %>" class="btn btn-outline-primary btn-sm"> 상세보기 </a>
                        </div>
                    </div>
                </div>
                
                <div class="form-group"></div>
            </div>
        <%end%>
    </div>
</div>