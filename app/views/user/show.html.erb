<div class="container">
    <div class="form-group row">
        <div class="col-3"> </div>
        <div class="col-6">
            <h1>회원 보기</h1>
            <div class="form-group">
                <p><%= @post.title %></p>
            </div>
                
            <div class="form-group">
                <p><%= @post.content %></p>
            </div>
        </div>
        <div class="col-3"> </div>
    </div>
    
    <div class="form-group row">
        <div class="col-3"> </div>
        <div class="col-6">
            <hr>
            <form action="/post/create_commnet/<%= @post.id %>">
                <div class="form-group">
                    <input type="text" name="content" class="form-control" placeholder="댓글">
                </div>
                
                <div class="text-right">
                    <button type="submit" class="btn btn-outline-primary btn-sm"> 작성 </button>
                </div>
            </form>
            <hr>
        </div>
        <div class="col-3"> </div>
    </div>
    
   
    
    <div class="form-group row">
        <div class="col-3"> </div>
        <div class="col-6">
            <% @comments.each do |c| %>
                <div class="form-group">
                    <p><%= c.content %></p>
                </div>
                    
                <div class="form-group">
                    <p><%= c.updated_at %></p>
                </div>
                <hr>
            <% end %>
        </div>
        <div class="col-3"> </div>
    </div>
</div>
