<div class="container">
    <div class="row">
        <div class="col">
            <h1> 게시글 목록 </h1>
        </div>
        
        <div class="col text-right">
            <a href="/post/new" class="btn btn-outline-primary">글 쓰기</a>
        </div>
    </div>
</div>

<div class="container"> 
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>번호</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>작성일</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @posts.reverse.each do |p| %>
                    <tr>
                      <th scope="row"><%= p.id %></th>
                      <td><a href="/post/show/<%= p.id%>"><%= p.title %></a></td>
                      <td><%= p.user.email if p.user %></td>
                      <td><%= time_ago_in_words(p.created_at) %></td>
                      <td>
                        <a href="/post/edit/<%= p.id %>" class="btn btn-outline-primary btn-sm"> 수정 </a>
                        <a href="/post/destroy/<%= p.id %>" class="btn btn-outline-danger btn-sm"> 삭제 </a>
                      </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>