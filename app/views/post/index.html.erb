<div class="container">
    
    <div class="row">
      <div class="col-3"></div>
    
      <div class="col-6 text-right">
        <a href="/post/new" class="btn btn-primary"> 글 쓰기 </a>
      </div>
        
      <div class="col-3"></div>
    </div>
    
    <div class="form-group"></div>
    
    <div class="form-group row">
        <% @posts.each do |p| %>
            <div class="col-3"></div>
            
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <%= p.id %> 번째 글
                        <h4 class="card-title"><%= p.title %></h4>
                        <h6 class="card-subtitle mb-2 text-muted"><%= p.updated_at %></h6>
                            
                        <div class="text-right">
                            <a href="/post/show/<%= p.id %>" class="btn btn-outline-primary btn-sm"> 상세보기 </a>
                        </div>
                    </div>
                </div>
                
                <div class="form-group"></div>
            </div>
            
            <div class="col-3"></div>
        <%end%>
    </div>
    
</div>