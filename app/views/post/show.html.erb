<div class="container">
    <div class="form-group row">
        <div class="col"></div>
        
        <div class="col-lg-6 col-md-8 col-sm-12">
            <h1>글 보기</h1>
            <div class="form-group">
                <p><%= @post.title %></p>
            </div>
                
            <div class="form-group">
                <p><%= @post.content %></p>
            </div>
            
            <div class="text-right">
                <a href="/post/edit/<%= @post.id %>" class="btn btn-outline-primary"> 수정 </a>
                <a href="/post/destroy/<%= @post.id %>" class="btn btn-outline-danger"> 삭제 </a>
            </div>
        </div>
        <div class="col"> </div>
    </div>
    
    <div class="form-group row">
        <div class="col"></div>
        <div class="col-lg-6 col-md-8 col-sm-12">
            <hr>
            <form action="/post/create_commnet/<%= @post.id %>">
                <div class="form-group">
                    <input type="text" name="content" class="form-control" placeholder="댓글" autofocus>
                </div>
                
                <div class="text-right">
                    <button type="submit" class="btn btn-outline-primary btn-sm"> 작성 </button>
                </div>
            </form>
        </div>
        <div class="col"></div>
    </div>
    
</div>

<div class="container">
    <div class="form-group row">
        <div class="col"></div>
        
        <div class="col-lg-6 col-md-8 col-sm-12">
            <% @comments.each do |c| %>
                <hr>
                
                <div class="form-group">
                    <p><%= c.content %></p>
                </div>
                    
                <div class="form-group">
                    <p><%= c.updated_at %></p>
                </div>
                
            <% end %>
        </div>
        
        <div class="col"></div>
    </div>
</div>
