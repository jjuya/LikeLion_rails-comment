<div class="container">
    <div class="col"></div>
    
    <div class="col">
        <div class="form-group row">
            <div class="col">
                <h1> 트윗 목록 </h1>
            </div>
            <div class="col text-right">
                <a href="/tweets/new" class="btn btn-outline-primary"> 새로운 트윗 </a>
                <%= link_to("게시판 가기", "/post/index", method: "post")%>
            </div>
        </div>
        
        
        <% @tweets.each do |t| %>
            <div class="form-group row">
                <div class="col-10">
                    <p> <%= t.content %> </p>
                </div>
                <div class="col-2">
                    <a href="/tweets/<%= t.id %>/edit" class="btn btn-primary btn-sm"> 수정 </a>
                    <!--<a href="/tweets/destroy/<%= t.id %>" class="btn btn-danger btn-sm"> 삭제 </a>-->
                    <%= link_to("삭제", "/tweets/#{t.id}", method: "delete")%>
                </div>
            </div>
        <% end %>
        
    </div>
    
    <div class="col"></div>
</div>